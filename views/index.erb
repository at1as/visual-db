<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="../../assets/ico/favicon.ico">

    <title>Connect ~ Visual DB</title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/starter-template.css" rel="stylesheet">
    <link href="css/main.css" rel="stylesheet">
  </head>
  <body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="about">Visual DB</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/">Connect</a></li>
            <li><a href="databases">Databases<% if $db_name %> :: <%= $db_name %><% end %></a></li>
            <li><a href="tables">Tables<% if $table_name %> :: <%= $table_name %><% end %></a></li>
            <li><a href="query">Query</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <div class="container">

      <div class="starter-template">

        <% if $sql_conn %>
          <h3 style="color:green">Successfully Connected</h3>
        <% else %>
          <h3>Please enter your MySQL credentials</h3>
        <% end %>
        <% if $db_error %>
          <span class="db_err"><%= $db_error %></span>
        <% end %>
        <div class="well login_well">
          <form method="post" action="/connect">
            <b>Host</b>
            <input class="form-control" name="hostname" id="hostname" value="localhost" <% if $sql_conn %>readonly<% end %>>
            <b>Port</b>
            <input class="form-control" name="port" id="port" value="3306" <% if $sql_conn %>readonly<% end %>>
            <b>Username</b>
            <input class="form-control" name="username" id="username" value="root" <% if $sql_conn %>readonly<% else %>autofocus<% end %>>
            <b>Password</b>
            <input class="form-control" name="password" id="password" placeholder="" <% if $sql_conn %>readonly<% end %>>
            <% if !$sql_conn %>
              <input class="btn btn-block btn-primary login_btn" type="submit" value="Connect">
            <% end %>
          </form>
        
          <% if $sql_conn %>
          <form method="post" action="/disconnect">
            <input class="btn btn-block btn-primary login_btn" type="submit" value="Disconnect">
          </form>
          <% end %>
        
        </div><!-- /.well -->
      </div><!-- /.starter-template -->

    </div><!-- /.container -->

  </body>
</html>
